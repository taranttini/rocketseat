generator client {
  provider = "prisma-client-js"
}

datasource db {
  //provider = "mysql"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//updated_at    DateTime @updatedAt

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  password_hash String
  email         String   @unique
  created_at    DateTime @default(now())

  @@map("users")
}

model CheckIn {
  id           String    @id @default(uuid())
  created_at   DateTime  @default(now())
  validated_at DateTime?

  @@map("check_ins")
}

model Gym {
  id          String  @id @default(uuid())
  title       String
  description String?
  phone       String?
  latitude    Decimal
  longitude   Decimal

  @@map("gyms")
}
